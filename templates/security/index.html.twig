{% extends 'base.html.twig' %}

{% block title %}Users{% endblock %}

{% block body %}

<div class="container mt-5">
    <div class="row">
        <div class="col mt-5">
            <h2>Users</h2>
            
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col"></th>
                        <th scope="col">Username</th>
                        <th scope="col">FullName</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr class="table-primary">
                            {% if user.image == null %}
                                {% if user.sexe =='M' %}
                                    <th style="vertical-align:middle;" scope="row">
                                    <img src="{{ asset('/ProfileImg/M.jpeg') }}" width="75"
                                        height="75" class=" float-left mr-3 img-fluid my-2 rounded-circle" ></th>
                                {% else %}
                                    <th style="vertical-align:middle;" scope="row">
                                    <img src="{{ asset('/ProfileImg/F.png') }}" width="75"
                                        height="75" class=" float-left mr-3 img-fluid my-2 rounded-circle"></th>
                                {% endif %}
                            {% else %}
                            
                                
                                <th style="vertical-align:middle;" scope="row">
                                    <img class=" img-fluid my-2 rounded-circle float-left mr-3 "  
                                        src="{{ asset('/ProfileImg/'~user.image) }}" 
                                        alt="image" style="width:75px;height:75px;" />
                                </th>
                            {% endif %}
                            <td style="vertical-align:middle;"><a href="{{ path('security_users_show' ,{"id": user.id}) }}">{{user.username}}</a></td>
                            <td style="vertical-align:middle;">{{user.LastName}} {{user.FirstName}}</td>
                            <td style="vertical-align:middle;"> 
                                <a class="btn btn-primary btn-sm" 
                                href="{{ path('security_users_show' ,{"id": user.id}) }}" role="button">
                                Details
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
