{%  extends 'base.html.twig' %}

{% block body %}
    <h1>Log In</h1>

    <form action="{{ path('security_login') }}" method="post">
        <div class="form-group">
            <input placeholder="Email..." required name="_username"
            type="text" class="form-control">
        </div>
        <div class="form-group">
            <input placeholder="Password" required name="_password"
                   type="password" class="form-control">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-succes">Log In</button> </div>


    </form>
{% endblock %}